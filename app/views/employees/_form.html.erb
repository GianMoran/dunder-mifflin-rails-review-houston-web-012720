<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <li style="color: red"><%= e %></li>
  <% end %>
<% end %>

<%= form_with model: @employee do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %><br>
<%= f.label :last_name %>
<%= f.text_field :last_name %><br>
<%= f.label :alias %>
<%= f.text_field :alias %><br>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :office %>
<%= f.text_field :office %><br>
<%= f.label :dog %>
<%= f.collection_select :dog_id, @dogs, :id, :name %>

<br><%= f.submit %>
<% end %>